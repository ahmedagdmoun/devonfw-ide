#!/usr/bin/env bash

# autocompletion list
if [ "${1}" = "shortlist" ]
then
  if [ -z "${2}" ]
  then
    echo "setup help"
  fi
  exit
fi

if [ -n "${DEVON_IDE_TRACE}" ]; then set -vx; fi
# shellcheck source=scripts/functions
source "$(dirname "${0}")"/../functions

OPENSHIFT_HOME="${DEVON_IDE_HOME}/software/oc/"

# openshift installation
function doSetup(){
  if [ ! -d "${OPENSHIFT_HOME}" ] || [ ${1} != "silent" ]
  then
    # Getting leatest release
    if [ -z "${LATEST_VERSION}" ]
    then
      doEcho "Getting latest release..."
      local MAJOR_VERSION=$(curl "https://mirror.openshift.com/pub/" | awk -F "openshift-v" '/openshift-v/ {print $2}' | sort -r | grep -o -E "[0-9]+" | uniq | head -1)
      local LATEST_VERSION=$(curl "https://mirror.openshift.com/pub/openshift-v${MAJOR_VERSION}/clients/ocp/latest/" | awk -F "openshift-client-windows-" '/openshift-client-windows-/ {print $2}' | head -1 | awk -F'.zip' '{print $1}')
    fi
    doInstall "-" "${OPENSHIFT_HOME}" "oc" "${LATEST_VERSION}" "" "${MAJOR_VERSION}"
  else
    doRunCommand "oc"
  fi

}

# CLI
case ${1} in 
"help" | "-h")
  echo "Setup or run Openshift CLI (command-line interface for Openshift)."
  echo
  echo "Arguments:"
  echo " setup                    install Openshift CLI on your machine."
  echo " <<args>>                 call oc with the specified arguments. Call oc --help for details or use oc directly as preferred."
  echo
;;
"setup" | "s" | "")
  doEcho "Installating Openshift CLI..."
  doSetup
;;
esac